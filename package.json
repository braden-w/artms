{
	"name": "artms",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"format": "biome format --write .",
		"lint": "biome lint --write --unsafe .",
		"format-and-lint": "biome check --apply-unsafe .",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:drop": "drizzle-kit drop",
		"db:pull": "drizzle-kit introspect",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:check": "drizzle-kit check",
		"git-push-tiptap-extension-global-drag-handle": "git subtree push --prefix=packages/tiptap-extension-global-drag-handle tiptap-extension-global-drag-handle main",
		"git-push-tiptap-extension-floating-toolbar": "git subtree push --prefix=packages/tiptap-extension-floating-toolbar tiptap-extension-floating-toolbar main"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.3",
		"@types/node": "^22.7.5",
		"drizzle-kit": "^0.25.0",
		"tsx": "^4.19.1",
		"turbo": "^2.1.3",
		"typescript": "^5.6.3"
	},
	"packageManager": "pnpm@9.12.1",
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"@libsql/client": "^0.14.0",
		"@t3-oss/env-core": "^0.11.1",
		"dotenv": "^16.4.5",
		"drizzle-orm": "^0.34.1",
		"zod": "^3.23.8"
